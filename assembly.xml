<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>agoncal-fascicle-quarkus-pract</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>

  <fileSets>
    <fileSet>
      <directory>first-step</directory>
      <useDefaultExcludes>true</useDefaultExcludes>
      <excludes>
        <exclude>**/target/**</exclude>
        <exclude>*.iml</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>infrastructure</directory>
      <useDefaultExcludes>true</useDefaultExcludes>
      <excludes>
        <exclude>**/target/**</exclude>
        <exclude>*.iml</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>load-vintagestore</directory>
      <useDefaultExcludes>true</useDefaultExcludes>
      <excludes>
        <exclude>**/target/**</exclude>
        <exclude>*.iml</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>ui-vintagestore</directory>
      <useDefaultExcludes>true</useDefaultExcludes>
      <excludes>
        <exclude>*.iml</exclude>
        <exclude>package-lock.json</exclude>
        <exclude>README.md</exclude>
        <exclude>**/main/resources/META-INF/resources/ui-vintagestore/**</exclude>
        <exclude>**/dist/**</exclude>
        <exclude>**/target/**</exclude>
        <exclude>**/node/**</exclude>
        <exclude>**/node_modules/**</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${basedir}</directory>
      <useDefaultExcludes>false</useDefaultExcludes>
      <includes>
        <include>.dockerignore</include>
        <include>.editorconfig</include>
        <include>.gitignore</include>
        <include>pom.xml</include>
        <include>README.md</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
